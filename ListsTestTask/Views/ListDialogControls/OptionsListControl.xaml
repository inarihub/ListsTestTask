<UserControl x:Class="ListsTestTask.Views.ListDialogControls.OptionsListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ListsTestTask.Views.ListDialogControls"
             xmlns:vm="clr-namespace:ListsTestTask.ViewModels"
             xmlns:DGDR="clr-namespace:ListsTestTask.DragDropBehavior"
             mc:Ignorable="d">
    <Grid>
        <ListBox x:Name="optionsList" HorizontalAlignment="Stretch" SelectionMode="Single"
                 ItemsSource="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:OptionsListControl},
                 Mode=FindAncestor}, Path=Collection}" IsSynchronizedWithCurrentItem="True"
                 SelectedIndex="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:OptionsListControl},
                 Mode=FindAncestor}, Path=Index}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="{Binding Path=Name}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
